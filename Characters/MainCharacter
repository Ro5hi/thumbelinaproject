    }

    void SitDown () {
        // sit on furniture
    }

    void LayDown () {
        // lay on bed
    }

    void TVOn () {
        // turn on TV
    }

    void ClickBuy () {
        // buy from shop, less currency
    }

    void ClickSell () {
        // sell to shop, earn currency
    }

    void ClickFurniure () {

    }

    void DragFurniture () {

    }

    void PlaceFurniture () {

    }

    void RemoveFurniture () {

    }

}


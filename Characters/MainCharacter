using UnityEngine;
using UnityEgine.UI;

public class Thumbelina {
    int Day;
    int Coin;
    int Points;
    int Furniture;
    int Items;

    public Text DayText;
    public Text CoinText;
    public Text PointsText;

    public void NewGame () {
        Day = 1;
        Coin = 0;
        Points = 0;
        Furniture = 0;
        Items = 0;
        NextDay();
    }

    void NextDay () {
        Day = Day + 1;
        DayText.text = "Day: " + Day;
    }

    void EarnCoin () {
        Coin = Coin + 1;
        CoinText.text = "Coin: " + Coin;
    }

    void EarnPoints () {
        Points = Points + 1;
        PointsText.text = "Points: " + Points;
    }

    void AutoSave () {
        // save upon location
        // save when done decorating a level
    }

    void Interact () {
